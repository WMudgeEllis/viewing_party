<h1>Discover Movies</h1>
<div id="testing" >
  <%= link_to "", movies_path, remote: true %>
<button id= "button">Find Top Rated Movies</button>

<br><br>
<%= form_with(url: movies_path, local: true, method: :get) do |form| %>
  <%= form.text_field :query, label: "Search Movies by Title", placeholder: "ex: The Godfather" %>
  <%= form.submit "Search" %>
<% end %>
</div>



<script>
  <!-- listening for button to be clicked on -->
  $('#button').click(function(){
    <!-- hide button after clicking -->
    $('#button').hide()
    <!-- renders partial -->
    $('#testing a').parent().append("<%= j render 'testing' %>")
  })
  </script>
