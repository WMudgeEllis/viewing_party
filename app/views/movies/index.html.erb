<%= button_to "Find Top Rated Movies", movies_path, method: :get %>
<br><br>
<%= form_with(url: movies_path, local: true, method: :get) do |form| %>
  <%= form.text_field :query, label: "Search Movies by Title", placeholder: "ex: The Godfather" %>
  <%= form.submit "Search" %>
<% end %>

<% if @movies %>
<% @movies.each do |movie| %>
  <p><b>Title: </b><%= link_to movie.title, "/movies/#{movie.id}" %> <b>Rating: </b> <%= movie.vote_average %></p>
<% end %>
<% end %>
